<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_10">

    <ImageView
        android:id="@+id/iv_nearby_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@mipmap/head_image_default2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5">

        <TextView
            android:id="@+id/tv_nearby_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5"
            android:textColor="@color/chat_title_color"
            android:textSize="@dimen/dimen_text_size_16" />

        <TextView
            android:id="@+id/tv_nearby_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_nearby_nick_name"
            android:layout_below="@id/tv_nearby_nick_name"
            android:textSize="@dimen/dimen_text_size_14" />

        <TextView
            android:id="@+id/tv_nearby_personality_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_5" />
    </RelativeLayout>

</LinearLayout>
