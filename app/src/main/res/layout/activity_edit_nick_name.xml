<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chat.activity.EditNickNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/dimen_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_edit_nick_name"
            android:textSize="@dimen/dimen_text_size_20" />

        <Button
            android:id="@+id/btn_edit_name_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/btn_edit_save_button" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_edit_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
